<!DOCTYPE html>
<html>
  <head>
    <title>Paramount of Oak Park</title>
    <%= csrf_meta_tags %>
    <%= include_gon(:init => true) %>
    <%= Gon::Base.render_data({}) %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div id="page-loader">
        <div class="sk-wave">
            <div class="sk-rect sk-rect1"></div><!-- End .sk-rect -->
            <div class="sk-rect sk-rect2"></div><!-- End .sk-rect -->
            <div class="sk-rect sk-rect3"></div><!-- End .sk-rect -->
            <div class="sk-rect sk-rect4"></div><!-- End .sk-rect -->
            <div class="sk-rect sk-rect5"></div><!-- End .sk-rect -->
        </div><!-- End .sk-wave -->
    </div><!-- End #page-loader -->

    <div id="wrapper">
      <header class="header header2 gray sticky-header">
        <div class="header-inner">
          <div class="container">
            <a href="/" class="site-logo" title="Paramount Rehab">
              <%= image_tag 'logo.png', alt: 'Paramount Logo', width: '50px' %>
              <span class="sr-only">Paramount Rehab</span>
            </a>

            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav-container" aria-expanded="false">
              <span class="toggle-text">Menu</span>
              <span class="toggle-wrapper">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </span>
            </button>

            <div class="collapse navbar-collapse" id="main-nav-container">
              <ul class="nav navbar-nav navbar-right">

                <li><a href="/" role="button" aria-expanded="false">Home</a></li>

                <li>
                  <a href="/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Care<span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                      <li><a href="/pages/circle_of_care">Circle of Care</a></li>
                      <li><a href="/pages/wound_care">Wound Care</a></li>
                      <li><a href="/pages/dementia_care">Dementia Care</a></li>
                  </ul>
                </li>
                <li>
                  <a href="/pages/therapy" role="button" aria-expanded="false"><span>Therapy</span></a>
                </li>
                <li>
                  <a href="/pages/careers" role="button" aria-expanded="false">Careers</a>
                </li>
                <li>
                  <a href="/pages/about" role="button" aria-expanded="false">About</a>
                </li>
                <li>
                  <a href="/pages/contact" role="button" aria-expanded="false">Contact</a>
                </li>
              </ul>
            </li>

              </ul>
            </div><!-- /.navbar-collapse -->

          </div><!-- End .container -->
        </div><!-- End .header-inner -->
      </header><!-- End .header -->

      <div class="main">
        <%= yield %>
      </div>

    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-5">
            <div class="widget about-widget">
              <%= image_tag 'logo.png', alt: 'Logo', width: '150px' %>
              <hr>
                <label>Visit Us:</label>
                <a href="https://www.google.com/maps/place/625+N+Harlem+Ave,+Oak+Park,+IL+60302">625 N. Harlem Ave. Oak Park IL. 60302</a><br>
              <label>Call Us:</label> <a href="tel:+17088485966">(708)-848-5966</a><br>
              <label>Write Us:</label> <a href="mailto:paramountchstours@gmail.com">paramountchstours@gmail.com</a>
            </div><!-- End .widget -->
          </div><!-- End .col-md-5 -->
          <div class="col-md-6 col-md-offset-1">
            <div class="row">

              <div class="widget">
                  <h4 class="widget-title">Paramount Rehab</h4>
                  <div class="row">

                    <div class="col-md-4">
                      <ul class="fa-ul">
                        <li><i class="fa-li fa fa-circle-o" aria-hidden="true"></i>Care</li>
                        <li><a href="/pages/circle_of_care"><i class="fa-li fa fa-chain" aria-hidden="true"></i>Circle of Care</a></li>
                        <li><a href="/pages/wound_care"><i class="fa-li fa fa-chain" aria-hidden="true"></i>Wound Care</a></li>
                        <li><a href="/pages/dementia_care"><i class="fa-li fa fa-chain" aria-hidden="true"></i>Dementia Care</a></li>
                      </ul>
                    </div>

                    <div class="col-md-4">
                      <ul class="fa-ul">
                        <li><a href="/pages/therapy"><i class="fa-li fa fa-circle-o" aria-hidden="true"></i>Therapy</a></li>
                        <li><a href="/pages/careers/"><i class="fa-li fa fa-circle-o" aria-hidden="true"></i>Careers</a></li>
                        <li><a href="/pages/about"><i class="fa-li fa fa-circle-o" aria-hidden="true"></i>About</a></li>
                        <li><a href="/pages/contact"><i class="fa-li fa fa-circle-o" aria-hidden="true"></i>Contact</a></li>
                      </ul>
                    </div>

                  </div>
              </div><!-- End .widget -->

            </div><!-- End .row -->
          </div><!-- End .col-md-6 -->
        </div><!-- End .row -->
      </div><!-- End .container -->
    </footer><!-- End .footer -->

    <a id="scroll-top" href="#top" title="Scroll top"><i class="fa fa-angle-up"></i></a>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
