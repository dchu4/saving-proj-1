<%= form_tag "/posts/#{@post.id}", method: :post do%>
  <%= label_tag :post_source, 'Post Media' %>
  <%= file_field_tag :post_source, class: 'form-control-file' %>

  <%= label_tag :post_type, 'Post Type' %>
  <%= text_field_tag :post_type %>

  <%= label_tag :post_caption, 'Post Type' %>
  <%= text_area_tag :post_caption %>
<% end %>