<% title 'Paramount|Careers' %>
<% meta_description 'Job application for. RN, LPN, CNA, Dietary, Housekeeping, Activities, Social Services, Receptionist, Office Manager.' %>

<div class="bg-custom text-white section-heading">
  <div class="container-fluid">
    <h2 class="text-center">Careers</h2>
  </div>
</div>

<% if notice %>
  <div class="container pt20">
    <div class="row">
      <div class="alert alert-dismissible alert-success text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= notice %></strong>
      </div>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="container pt20">
    <div class="row">
      <div class="alert alert-dismissible alert-danger text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= alert %></strong>
      </div>
    </div>
  </div>
<% end %>

<div class="container mb30 pt40">
  <div class="row section-wrapper">
    <h3 class="text-center mb30">Apply Today</h3>
      
    <%= form_for @career do |f| %>
      <div class="form-group row">
        <div class="col-sm-12 col-md-12 col-lg-3">
          <%= f.label :job_role, 'Job Role:', class: 'text-required' %><br>
          <%= f.select :job_role, options_for_select(job_roles), class: 'form-control' %>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-12 col-md-4 col-lg-4">
          <%= f.label :first_name, 'First Name:', class: 'text-required' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="col-sm-12 col-md-4 col-lg-4">
          <%= f.label :middle_name, 'Middle Name:' %>
          <%= f.text_field :middle_name, class: 'form-control' %>
        </div>
      
        <div class="col-sm-12 col-md-4 col-lg-4">
          <%= f.label :last_name, 'Last Name:', class: 'text-required' %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :phone_number, 'Phone #:', class: 'text-required' %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Email Address:', class: 'text-required' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-12 col-md-12 col-lg-9">
          <%= f.label :street_address, 'Address:', class: 'text-required' %>
          <%= f.text_field :street_address, class: 'form-control' %>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-3">
          <%= f.label :apt_number, 'Apt/Unit #:' %>
          <%= f.text_field :apt_number, class: 'form-control' %>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-12 col-md-12 col-lg-3">
          <%= f.label :city, 'City:', class: 'text-required' %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-3">
          <%= f.label :state, 'State:', class: 'form text-required' %><br>
          <%= f.select :state, options_for_select(us_states), class: 'form-control' %>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-3">
          <%= f.label :zip_code, 'Zip Code:', class: 'text-required'%>
          <%= f.text_field :zip_code, class: 'form-control' %>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-3">
          <%= f.label :country, 'Country:', class: 'text-required' %>
          <%= f.text_field :country, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :resume, 'Upload Resume (pdf, docx, rtf, odt only):', class: 'text-required' %>
        <%= f.file_field :resume, class: 'form-control-file' %>
      </div>

      <div class="form-group">
        <%= f.label :referral, 'Name of Referrer:' %>
        <%= f.text_field :referral, class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.invisible_captcha :subtitle %>
        <%= f.submit 'Apply', class: "btn btn-lg btn-custom2 min-width tp-resizeme" %>
      </div>
    <% end %>
  </div>
</div>
