<div class="bg-custom text-white section-heading">
  <div class="container-fluid">
    <h2 class="text-center">Applications</h2>
  </div>
</div>

<div class="container-fluid pt10">
  <div class="row table-min-height">
    <div class="col-md-10 col-sm-12 col-lg-10 col-md-offset-1 col-lg-offset-1">
      <table class="table table-condensed table-responsive">
        <tr>
          <td><b>Name:</b></td>
          <td><b>Email:</b></td>
          <td><b>Delete:</b></td>
        </tr>
        <% @careers.each do |career| %>
          <tr>
            <td><%= link_to career.full_name, "/careers/#{career.id}" %></td>
            <td><%= career.email %></td>
            <td><%= link_to "Delete", "/careers/#{career.id}", :method => :delete %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>