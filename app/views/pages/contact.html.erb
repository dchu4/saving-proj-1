<div class="jumbotron bg-custom text-white">
  <div class="container-fluid">
    <h2 class="text-center">Contact</h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <% if notice %>
      <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4 class="notice"><%= notice %><h4>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4 class="notice"><%= alert %></h4>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-7">
      <h2 class="mb30">Send Us A Message</h2>
      <%= form_for :contact, url: contacts_path do |f| %>
        <div class="row">
          <div class="col-md-7">
            <%= f.label :first_name, "First Name:" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div><!-- End .col-md-7 -->
        </div><!-- End .row -->
        <div class="row">
          <div class="col-md-7">
            <%= f.label :email, "Email:" %>
            <%= f.text_field :email, class: "form-control" %>
          </div><!-- End .col-md-7 -->
        </div><!-- End .row -->
        <div class="row">
          <div class="col-md-7">
            <%= f.label :message, "Message:" %>
            <%= f.text_area :message, class: "form-control" %>
          </div><!-- End .col-md-7 -->
        </div><!-- End .row -->

        <%= f.invisible_captcha :subtitle %>
        <%= f.submit "Send Message", class: "btn btn-lg btn-custom2 min-width tp-resizeme" %>
      <% end %>
    </div><!-- End .col-md-7 -->

    <div class="clearfix mb65 visible-sm visible-xs"></div><!-- margin -->

    <div class="col-md-5">
      <!-- <div id="map" class="vertical"></div> --><!-- End #map -->  

      <div class="contact-box mb30">
        <h3>Location</h3>
        <ul>
          <li><strong>Address:</strong> <a href="https://www.google.com/maps/place/625+N+Harlem+Ave,+Oak+Park,+IL+60302">625 N. Harlem Ave. Oak Park IL. 60302</a></li>
          <li><strong>Phone</strong> <a href="tel:+17088485966">(708)-848-5966</a></li>
          <li><strong>Email:</strong> <a href="mailto:paramountchstours@gmail.com">paramountchstours@gmail.com</a>
        </ul>
      </div><!-- End .contact-box -->
    </div><!-- End .col-md-5 -->
  </div><!-- End .row -->

  <div class="mb70 hidden-xs"></div><!-- margin -->

  </div><!-- End .row -->
</div><!-- End .container -->

<div class="mb60"></div><!-- margin -->