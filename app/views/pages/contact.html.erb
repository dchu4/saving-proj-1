<% title 'Paramount|Contact Us' %>
<% meta_description 'Email: paramountchstours@gmail.com, Address: 625 N. Harlem Ave. Oak Park IL. 60302, Phone#: 708-848-5966' %>

<div class="bg-custom text-white section-heading">
  <div class="container-fluid">
    <h2 class="text-center">Contact Us</h2>
  </div>
</div>

<% if notice %>
  <div class="container pt20">
    <div class="row">
      <div class="alert alert-dismissible alert-success text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= notice %></strong>
      </div>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="container pt20">
    <div class="row">
      <div class="alert alert-dismissible alert-danger text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= alert %></strong>
      </div>
    </div>
  </div>
<% end %>

<div class="container mb40 pt40">
  <div class="row">
    <div class="col-md-7">
      <h3 class="mb30">Send Us A Message</h3>
      <%= form_for :contact, url: contacts_path do |f| %>
        <div class="row">
          <div class="col-md-7">
            <%= f.label :first_name, "First Name:" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div><!-- End .col-md-7 -->
        </div><!-- End .row -->
        <div class="row">
          <div class="col-md-7">
            <%= f.label :email, "Email:" %>
            <%= f.text_field :email, class: "form-control" %>
          </div><!-- End .col-md-7 -->
        </div><!-- End .row -->
        <div class="row">
          <div class="col-md-7">
            <%= f.label :message, "Message:" %>
            <%= f.text_area :message, class: "form-control" %>
          </div><!-- End .col-md-7 -->
        </div><!-- End .row -->

        <%= f.invisible_captcha :subtitle %>
        <%= f.submit "Send Message", class: "btn btn-lg btn-custom2 min-width tp-resizeme" %>
      <% end %>
    </div><!-- End .col-md-7 -->

    <div class="clearfix mb30 visible-sm visible-xs"></div><!-- margin -->

    <div class="col-md-5">
      <!-- <div id="map" class="vertical"></div> --><!-- End #map -->  

      <div class="contact-box">
        <h3>Location</h3>
        <ul>
          <li><strong>Address:</strong> <a href="https://www.google.com/maps/place/625+N+Harlem+Ave,+Oak+Park,+IL+60302">625 N. Harlem Ave. Oak Park IL. 60302</a></li>
          <li><strong>Phone</strong> <a href="tel:+17088485966">(708)-848-5966</a></li>
          <li><strong>Email:</strong> <a href="mailto:paramountchstours@gmail.com">paramountchstours@gmail.com</a></li>
        </ul>
      </div><!-- End .contact-box -->
    </div><!-- End .col-md-5 -->
  </div><!-- End .row -->
</div>