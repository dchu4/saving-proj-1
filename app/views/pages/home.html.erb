<div class="bg-custom pt30 pb20 pb20-sm">
  <div class="container">
    <h2 class="title text-white mb20">Book a Tour</h2>
      <div class="row">
        <%= form_for @tour, url: url_for(controller: 'tours', action: 'create') do |f| %>
          <div class="col-lg-3 col-md-2 col-sm-12">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div><!-- End .col-md-2 -->
          <div class="col-lg-3 col-md-2 col-sm-12">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div><!-- End .col-md-2 -->
          <div class="col-lg-2 col-md-2 col-sm-12">
            <%= f.label :tour_date %>
            <%= f.text_field :tour_date, class: "form-control flatpickr_calendar", placeholder: "Select Date.." %>
          </div><!-- End .col-md-2 -->
          <div class="col-lg-2 col-md-2 col-sm-12">
            <%= f.label :tour_time %>
            <%= f.text_field :tour_time, class: "form-control flatpickr_time", placeholder: "Select Time..", "data-alt-input" => "true", "data-alt-format" => "h:i K" %>
          </div><!-- End .col-md-2 -->
          <div class="col-lg-2 col-md-2 col-sm-12" style="margin-top: 27px">
            <%= f.invisible_captcha :subtitle %>
            <%= f.submit 'Book', class: "btn btn-block tour-button" %>
          </div><!-- End .col-md-2 -->
        <% end %>
      </div><!-- End .row -->

      <div class="clearfix mb10 visible-sm visible-xs"></div><!-- margin -->
  </div><!-- End .container -->
</div>

