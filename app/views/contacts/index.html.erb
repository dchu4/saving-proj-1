<div class="bg-custom text-white section-heading">
  <div class="container-fluid">
    <h2 class="text-center">Contact Messages</h2>
  </div>
</div>

<div class="container-fluid pt10">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-lg-12">
      <table class="table table-condensed table-responsive">
        <tr>
          <td>Name:</td>
          <td>Email:</td>
          <td>Delete:</td>
        </tr>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= link_to contact.first_name, "/contacts/#{contact.id}" %></td>
            <td><%= contact.email %></td>
            <td><%= link_to 'Delete', "/contacts/#{contact.id}", :method => :delete %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>