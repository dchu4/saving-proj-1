<div class="bg-custom text-white section-heading">
  <div class="container-fluid">
    <h2 class="text-center">Contact Messages</h2>
  </div>
</div>

<div class="container-fluid pt10">
  <div class="row table-min-height">
    <div class="col-md-10 col-sm-12 col-lg-10 col-md-offset-1 col-lg-offset-1 table-responsive table-condensed">
      <table class="table">
        <tr>
          <td><b>Name:</b></td>
          <td><b>Email:</b></td>
          <td><b>Delete:</b></td>
        </tr>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= link_to contact.first_name, "/contacts/#{contact.id}" %></td>
            <td><%= contact.email %></td>
            <td><%= link_to 'Delete', "/contacts/#{contact.id}", :method => :delete %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>